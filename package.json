{
  "name": "transparent-electron-app",
  "version": "1.0.0",
  "description": "Frameless transparent Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "frameless",
    "transparent"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.transparent.electron.app",
    "productName": "Trovinn Projector App",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "*.png"
    ],
    "directories": {
      "output": "dist"
    }
  }
}